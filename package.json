{
    "name": "express-typescript-template",
    "version": "1.0.0",
    "description": "Production-grade Express.js + TypeScript template with authentication, DTOs, Swagger, Redis, and switchable SQL/MongoDB.",
    "main": "dist/server.js",
    "scripts": {
        "dev": "ts-node-dev --respawn src/server.ts",
        "build": "tsc --build",
        "start": "node dist/server.js",
        "lint": "eslint . --max-warnings=0",
        "format": "prettier --write .",
        "test": "jest",
        "test:watch": "jest --watch",
        "swagger:gen": "node src/docs/swagger.ts",
        "prisma:generate": "prisma generate --schema=src/db/schema.prisma",
        "prisma:migrate": "prisma migrate dev --schema=src/db/schema.prisma",
        "prisma:studio": "prisma studio --schema=src/db/schema.prisma",
        "prisma:format": "prisma format --schema=src/db/schema.prisma"
    },
    "keywords": [
        "express",
        "typescript",
        "template",
        "auth",
        "swagger",
        "redis",
        "prisma",
        "mongoose"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@prisma/client": "^6.14.0",
        "axios": "^1.11.0",
        "bcrypt": "^6.0.0",
        "cors": "^2.8.5",
        "dotenv": "^17.2.1",
        "express": "^5.1.0",
        "express-rate-limit": "^8.0.1",
        "helmet": "^8.1.0",
        "ioredis": "^5.7.0",
        "jsonwebtoken": "^9.0.2",
        "luxon": "^3.7.1",
        "passport": "^0.7.0",
        "passport-azure-ad-oauth2": "^0.0.4",
        "passport-facebook": "^3.0.0",
        "passport-google-oauth20": "^2.0.0",
        "passport-microsoft": "^2.1.0",
        "pino": "^9.9.0",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1",
        "ws": "^8.18.3",
        "zod": "^4.0.17"
    },
    "devDependencies": {
        "@types/bcrypt": "^6.0.0",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.3",
        "@types/jest": "^30.0.0",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/luxon": "^3.7.1",
        "@types/node": "^24.2.1",
        "@types/passport-facebook": "^3.0.3",
        "@types/passport-google-oauth20": "^2.0.16",
        "@types/passport-microsoft": "^2.1.0",
        "@types/swagger-jsdoc": "^6.0.4",
        "@types/swagger-ui-express": "^4.1.8",
        "@types/ws": "^8.18.1",
        "@typescript-eslint/eslint-plugin": "^8.39.1",
        "@typescript-eslint/parser": "^8.39.1",
        "eslint": "^9.33.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "jest": "^30.0.5",
        "nodemon": "^3.0.2",
        "pino-pretty": "^13.1.1",
        "prettier": "^3.2.4",
        "prisma": "^6.14.0",
        "supertest": "^7.1.4",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.9.2"
    }
}
